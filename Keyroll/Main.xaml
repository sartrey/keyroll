<Window x:Class="Keyroll.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Keyroll" 
        Width="400" Height="540"  
        WindowStyle="None" ResizeMode="NoResize" 
        BorderBrush="Black" BorderThickness="1"
        WindowStartupLocation="CenterScreen">
    <Canvas Name="PanelMain" Left="0" Top="0" Height="540" Width="400">
        <Rectangle Name="TitleBar" MouseDown="TitleBar_MouseDown">
            <Rectangle.Margin>0,0,0,0</Rectangle.Margin>
            <Rectangle.Width>398</Rectangle.Width>
            <Rectangle.Height>25</Rectangle.Height>
            <Rectangle.Fill>LightGreen</Rectangle.Fill>
        </Rectangle>
        <TreeView Name="TrvRecords">
            <TreeView.Width>398</TreeView.Width>
            <TreeView.Height>380</TreeView.Height>
            <TreeView.Margin>0,25,0,0</TreeView.Margin>
            <TreeView.BorderThickness>0</TreeView.BorderThickness>
        </TreeView>
    </Canvas>
</Window>
